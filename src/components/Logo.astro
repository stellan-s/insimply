---
import { Image } from 'astro:assets'
import logo from '../assets/img/logo.svg'

/**
 * Logo Component
 *
 * @description Logo description
 */
interface Props {
  /**
   * Whether to load the image eagerly or lazily
   * @default 'eager'
   */
  loading?: 'eager' | 'lazy'
}

const { loading = 'eager' }: Props = Astro.props
---

<a href="/" class="flex items-center gap-1 !no-underline">
  <!-- <Image src={logo} alt="Accessible Astro Logo" width="47" height="37" loading={loading} /> -->
   <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-square-icon lucide-square"><rect width="12" height="12" x="6" y="6" rx="2"/></svg>
  <span class="font-bold uppercase tracking-widest font-[helvetica] text-base">Insimply</span>
</a>

<style lang="scss">
  a {
    color: var(--foreground-color);
  }
</style>
